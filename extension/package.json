{
  "name": "chatbot-vscode",
  "displayName": "ChatBot VSCode",
  "description": "A VS Code extension to chat with your AI bot.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:chatbot-vscode.openChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chatbot-vscode.openChat",
        "title": "ChatBot: Open Chat"
      }
    ]
  },
  "scripts": {
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "@types/vscode": "^1.101.0",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37",
    "typescript": "^5.8.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
